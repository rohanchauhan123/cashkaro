{
  "manifest_version": 3,
  "name": "CashKaro Cashback Helper",
  "version": "1.0",
  "description": "Activate cashback automatically when shopping on partner sites.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
 "content_scripts": [
  {
    "matches": [
      "https://*.myntra.com/*",
      "https://*.ajio.com/*",
      "https://*.flipkart.com/*",
      "https://*.amazon.in/*"
    ],
    "js": ["content.js"]
  }
]
,
  "permissions": ["storage", "tabs", "activeTab", "scripting"]
}
